{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "esnext", 
            "dom"
        ],
        "module": "commonjs",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es2018",
        "outDir": "./lib"
    },
    "include": [
        "src/typescript-ioc.ts", "src/container-config.ts", "src/index.ts"
    ]
}
